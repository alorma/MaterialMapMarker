<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorSecondary">@color/colorSecondary</item>

        <item name="colorOnPrimary">#FFFFFF</item>
        <item name="materialMapMarkerStyle">@style/Widget.Demo.MaterialMarker</item>
    </style>

    <style name="Widget.Demo.MaterialMarker" parent="Widget.MaterialComponents.TextView">
        <item name="shapeAppearance">@style/ShapeAppearance.Demo.MapMarker</item>
        <item name="pointSize">8dp</item>
    </style>

    <style name="Widget.Demo.MaterialMarker.Primary" parent="Widget.Demo.MaterialMarker">
        <item name="shapeAppearance">@style/ShapeAppearance.Demo.MapMarker</item>
        <item name="rippleColor">?colorOnPrimary</item>
        <item name="fillColor">?colorPrimary</item>
        <item name="strokeColor">?colorOnPrimary</item>
    </style>

    <style name="Widget.Demo.MaterialMarker.Secondary" parent="Widget.Demo.MaterialMarker">
        <item name="shapeAppearance">@style/ShapeAppearance.Demo.MapMarker</item>
        <item name="pointSize">16dp</item>
        <item name="rippleColor">?colorOnSecondary</item>
        <item name="fillColor">?colorSecondary</item>
        <item name="strokeColor">?colorError</item>
    </style>

    <style name="ShapeAppearance.Demo.MapMarker" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">cut</item>
        <item name="cornerSize">8dp</item>
    </style>

</resources>