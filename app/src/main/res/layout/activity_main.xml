<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:gravity="center">

    <com.alorma.materialmarker.MaterialMapMarker
        android:id="@+id/marker0"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:elevation="4dp"
        android:gravity="center"
        android:text="Hello World!" />

    <Space
        android:layout_width="wrap_content"
        android:layout_height="24dp" />

    <com.alorma.materialmarker.MaterialMapMarker
        android:id="@+id/marker1"
        android:layout_width="200dp"
        android:layout_height="60dp"
        style="@style/Widget.Demo.MaterialMarker.Primary"
        android:elevation="4dp"
        android:gravity="center"
        android:text="Hello World!" />

    <Space
        android:layout_width="wrap_content"
        android:layout_height="24dp" />

    <com.alorma.materialmarker.MaterialMapMarker
        android:id="@+id/marker2"
        style="@style/Widget.Demo.MaterialMarker.Secondary"
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:elevation="4dp"
        android:gravity="center"
        android:text="Hello World!"
        />

</LinearLayout>